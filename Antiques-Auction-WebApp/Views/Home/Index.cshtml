@using System.Globalization
@model List<Antiques_Auction_WebApp.Models.Entities.AntiqueItem>
@{
    ViewData["Title"] = "Home Page";
    CultureInfo ci = new CultureInfo("en-us");
}

<div class="content">
    @if (ViewBag.IsSuccess == true)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            You have placed your bid successfully. <br />
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-4">
                                <h4 class="card-title align-middle" style="margin-bottom:0px;">Antique Items For Sale</h4>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="basic-datatables" class="table-bordered table" style="text-align:center;">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>Price</th>
                                        <th>Description</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr style="text-align:center">
                                            <th><img src="~/AntiqueItemImages/@item.ImageUrl" class="align-middle"
                                                style="width:100px"></th>
                                            <th class="align-middle">@item.Name</th>
                                            <th class="align-middle">@item.Price.ToString("C", ci)</th>
                                            <th class="align-middle">@item.Description</th>
                                            <th class="align-middle"><a class="btn btn-primary" asp-route="antiqueItemRoute"
                                                asp-route-id="@item.Id">Bid Now</a></th>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="../lib/jquery/dist/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $('#basic-datatables').DataTable({
            "order": [[2, "desc"]],
            "columnDefs": [
                { searchable: false, targets: [0, 2, 4] },
                { orderable: false, targets: [0, 1, 3, 4] }
            ],
            pageLength: 10,
            aLengthMenu: [
                [10, 50, 100, -1],
                [10, 50, 100, "All"]
            ],
            iDisplayLength: -1
        });
    });
</script>
